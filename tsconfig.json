{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "es5",
    "module": "amd",
    "declaration": true,
    "outFile": "dist/index.js", 
    // "strict": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "serverless.ts",
    "node_modules/**/*",
    "coverage/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "test/**/*"
  ]
}
